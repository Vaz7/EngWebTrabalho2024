extends layout

block content
  body
    .w3-bar.w3-pink
      a.w3-bar-item.w3-button(href="/home") Home
      a.w3-bar-item.w3-button(href="/tribunais") Tribunais
      a.w3-bar-item.w3-button(href="/taxonomia") Taxonomia
      a.w3-bar-item.w3-button(href="/favoritos") Favoritos
      a.w3-bar-item.w3-button(href="/perfil") Perfil
      a.w3-bar-item.w3-button(href="/search") Pesquisa
      a.w3-bar-item.w3-button.w3-right(href="/logout") Logout
      a.w3-bar-item.w3-button(href="/registar/admin") Adicionar Admin
      a.w3-bar-item.w3-button.w3-gray(href="/users") Consultar Utilizadores

  .w3-container.w3-padding
    h2 Lista de Utilizadores
    if users && users.length > 0
      table.w3-table-all
        thead
          tr
            th Nome
            th Email
            th Nome de Utilizador
            th Nível
            th Data de Criação
            th Último Acesso
            th Remover
        tbody
          each user in users
            tr
              td= user.name
              td= user.email
              td= user.username
              td= user.level
              td= user.dateCreated
              td= user.lastAccess
              td 
                a.w3-button.w3-red(href=`/users/remover/${user._id}`) Remover
                