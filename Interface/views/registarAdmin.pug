extends layout

block content
    link(rel='stylesheet', href='/stylesheets/login.css')

    .w3-bar.w3-pink
        a.w3-bar-item.w3-button(href="/home") Home
        a.w3-bar-item.w3-button(href="/tribunais") Tribunais
        a.w3-bar-item.w3-button(href="/taxonomia") Taxonomia
        a.w3-bar-item.w3-button(href="/favoritos") Favoritos
        a.w3-bar-item.w3-button(href="/perfil") Perfil
        a.w3-bar-item.w3-button(href="/search") Pesquisa
        a.w3-bar-item.w3-button.w3-right(href="/logout") Logout

        if canAddAcordao
            a.w3-bar-item.w3-button.w3-gray(href="/registar/admin") Adicionar Admin
            a.w3-bar-item.w3-button(href="/users") Consultar Utilizadores

    div(style="margin-top: 60px; display: flex; justify-content: center; align-items: center; height: calc(100vh - 60px);")
        div(class="w3-container w3-card-4 w3-light-grey w3-padding-16 w3-round-large" style="max-width: 400px;")
            h2(class="w3-center") Criar Conta Administrador
            form(id="login-form" action="/registar/admin" method="post")
                p
                    .input-text(title="Nome de Utilizador")
                        i.fa-solid.fa-user.fa-lg
                        input(name="username" type="text" placeholder="Nome de Utilizador" autofocus required)
                p
                    .input-text(title="Nome")
                        i.fa-solid.fa-address-card.fa-lg
                        input(name="name" type="text" placeholder="Nome" required)
                p
                    .input-text(title="Email")
                        i.fa-solid.fa-envelope.fa-lg
                        input(name="email" type="text" placeholder="Email" required)
                p
                    .input-text(title="Password")
                        i.fa-solid.fa-lock.fa-lg
                        input.password(name="password" type="password" placeholder="Password" required)
                p
                    button.w3-button.w3-pink.w3-round.w3-hover-margin(type="submit") Criar conta

            div(class="w3-center w3-margin-top" id="message" class=(warning ? '' : 'hidden'))
                if warning
                    p= warning
                else
                    p

    footer.w3-container.w3-pink 
        address Generated by Os Javalis::EngWeb2024 em #{d}
