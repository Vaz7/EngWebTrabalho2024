extends layout

block content
    link(rel='stylesheet', href='/stylesheets/login.css')

    div(id="login-form-div")
        h2 Login
        form(id="login-form" action="/login" method="post")
            p
                .input-text(title="Email")
                    i.fa-solid.fa-envelope.fa-lg
                    if loginData
                        input(name="email" type="text" placeholder="Email" value=loginData.email autofocus required)
                    else
                        input(name="email" type="text" placeholder="Email" autofocus required)

            p
                .input-text(title="Password")
                    i.fa-solid.fa-lock.fa-lg
                    if loginData
                        input.password(name="password" type="password" value=loginData.password placeholder="Password" required)
                    else
                        input.password(name="password" type="password" placeholder="Password" required)
            p
                button.w3-button.w3-pink.w3-round.w3-hover.w3-margin(type="submit") Iniciar sessão

        div(id="message" class=(message ? '' : 'hidden'))
            if message
                p= message
            else
                p 

        div(id="create-account-wrap")
            p Não possui conta? 
                a(href="/registar") Registar Conta

    footer.w3-container.w3-pink 
        address Generated by Os Javalis::EngWeb2024 em #{d}
