extends layout

block content
    link(rel='stylesheet', href='/stylesheets/login.css')


    div(class="w3-container w3-display-middle w3-card-4 w3-light-grey w3-padding-16 w3-round-large" style="max-width: 400px;")
        h2(class="w3-center") Login
        form(id="login-form" action="/login" method="post")
            p
                .input-text(title="Email")
                    i.fa-solid.fa-envelope.fa-lg
                    input(name="email" type="text" placeholder="Email" autofocus required)

            p
                .input-text(title="Password")
                    i.fa-solid.fa-lock.fa-lg
                    input.password(name="password" type="password" placeholder="Password" required)
            
            p
                button.w3-button.w3-pink.w3-round.w3-hover-margin(type="submit") Iniciar sessão

        div(class="w3-center w3-margin-top" id="message" class=(message ? '' : 'hidden'))
            if message
                p= message
            else
                p 

        div(class="w3-center")
            p Não possui conta? 
                a(href="/registar") Registar Conta

        // Social login buttons
        div(class="w3-center w3-margin-top")
            a(href="/login/google" class="w3-button w3-white w3-border w3-round w3-hover w3-margin-bottom social-button" style="background-color: #ffffff; color: #4285F4;")
                img(src='/images/google-logo.png', alt='Google logo', class='social-logo')
                |  Continuar com Google
            a(href="/login/facebook" class="w3-button w3-white w3-border w3-round w3-hover social-button" style="background-color: #3b5998; color: #ffffff;")
                img(src='/images/facebook-logo.png', alt='Facebook logo', class='social-logo')
                |  Continuar com Facebook

    block footer
        footer.w3-container.w3-pink.w3-bottom
            address Generated by Os Javalis::EngWeb2024 em #{d}
